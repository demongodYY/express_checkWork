extends layout

block headStyle
    link(rel="stylesheet/less",type="text/css", href='/vendor/bootstrap-datepicker-1.6.1-dist/css/bootstrap-datepicker.css')
block headJavascript
    script(src="/vendor/bootstrap-datepicker-1.6.1-dist/js/bootstrap-datepicker.js",type="text/javascript")
    script(src="/javascripts/dateselect.js",type="text/javascript")
    script(src="/javascripts/analyse.js",type="text/javascript")


block content
    article.col-md-12
        aside.col-md-2
            nav.analyse-aside
                ul.list-group(role="tablist")
                    li.list-group-item.active(role="presentation")
                        a(href="#statuForDay" data-toggle="tab") 每日考勤状态
                    li.list-group-item(role="presentation")
                        a(href="#statuAnalyse" data-toggle="tab") 考勤状态分析
        aticle.col-md-10.jumbotron.tab-content
            div#statuForDay.tab-pane.active
                table.table.table-hover.staff-statu-list
                    tr.text-center.tr-title
                        td 部门
                        td 姓名
                        td 电话
                        td 状态

                    div.col-md-1.pull-right
                        button#id_query_statu.btn.btn-primary.btn-lg 查询
                    form#date_post
                        div.input-group.input-group-lg.pull-right.col-md-4
                            span.input-group-addon 选择日期
                            input#id_date.form-control.input-date(type="text" name="date")
            div#statuAnalyse.tab-pane
                h1 analyse