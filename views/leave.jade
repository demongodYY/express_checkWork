extends layout

block headStyle
    link(rel="stylesheet/less",type="text/css", href='/vendor/bootstrap-datepicker-1.6.1-dist/css/bootstrap-datepicker.css')
block headJavascript
    script(src="/vendor/bootstrap-datepicker-1.6.1-dist/js/bootstrap-datepicker.js",type="text/javascript")
    script(src="/javascripts/dateselect.js",type="text/javascript")

block content
    form(action="#" method="post")
        div.col-md-6
            br
            br
            div.input-group.input-group-lg
                span.input-group-addon 请假员工
                input.form-control(type="text" name="username" placeholder="username")
            div.input-group.input-group-lg
                span.input-group-addon 员工电话
                input.form-control(type="text" name="phone" placeholder="phone")
        div.col-md-6
            br
            br
            div.input-group.input-group-lg.input-daterange
                span.input-group-addon 开始时间
                input#begin-date.form-control(type="text" name="begindate")
            div.input-group.input-group-lg.input-daterange
                span.input-group-addon 结束时间
                input#end-date.form-control(type="text" name="enddate")

        div.col-md-12
            br
            input.btn.btn-lg.btn-primary.pull-right(type="submit" value="提交")