            //    span.input-group-addon 员工电话
            //    input.form-control(type="text" name="phone" placeholder="phone")
            select.form-control.input-lg(name="staffId")
               option
                |-----请选择人员-----
               each user,i in userlist
                   option(value="#{user._id}" vecation="#{user.vecation}") #{user.dept}      ,#{user.username}     ,#{user.phone}
        div.col-md-6
            br
            br
            div.input-group.input-group-lg.input-daterange
                span.input-group-addon 开始时间
                input#begin-date.form-control.actual_range(type="text" name="begindate")
                span.input-group-addon 结束时间
                input#end-date.form-control.actual_range(type="text" name="enddate")

            //div.input-group.input-group-lg.input-daterange

        div.col-md-12
            br
            input.btn.btn-lg.btn-primary.pull-right(type="submit" value="提交")